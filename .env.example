# ============================================
# 币安量化交易机器人 — 环境变量配置模板
# 复制此文件为 .env 并填入真实值
# ============================================

# --- 币安 API 凭证 ---
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# --- 环境切换 ---
# true = 连接测试网 (testnet.binance.vision)
# false = 连接主网 (api.binance.com)
USE_TESTNET=true

# --- 交易对配置 ---
TRADING_SYMBOL=BTCUSDT

# --- 网格策略参数 ---
# 网格上界价格
GRID_UPPER_PRICE=70000
# 网格下界价格
GRID_LOWER_PRICE=60000
# 网格数量
GRID_COUNT=10
# 每格投入金额 (USDT)
GRID_INVESTMENT_PER_GRID=10

# --- 风控参数 ---
# 止损线：价格低于最低网格线的百分比时触发清仓 (例: 0.05 = 5%)
STOP_LOSS_PERCENT=0.05
# 止盈线：累计利润达到该金额时停止策略 (USDT)
TAKE_PROFIT_AMOUNT=100
# 最大允许价差 (Bid-Ask Spread)，超出则暂停下单 (例: 0.001 = 0.1%)
MAX_SPREAD_PERCENT=0.001
# 资金预留比例，账户余额低于总资金的该比例时停止新建仓位 (例: 0.1 = 10%)
RESERVE_RATIO=0.1

# --- Telegram 通知 (可选) ---
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# --- 日志级别 ---
LOG_LEVEL=INFO

# --- 自适应策略 ---
# 是否启用自适应模式（根据市场状态自动调整网格参数）
ADAPTIVE_MODE=true
# 市场分析间隔（秒），建议 300（5 分钟）
ANALYSIS_INTERVAL=300
# 马丁格尔加仓系数上限（下跌时单格投入最高放大倍数）
MARTIN_MULTIPLIER=1.5

# --- 代理配置 (可选) ---
# 如果您在中国大陆等地区运行，建议配置系统代理以确保连接稳定性
# 例如: http://127.0.0.1:7890
PROXY_URL=http://127.0.0.1:10808
